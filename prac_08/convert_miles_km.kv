BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: textbox_input_number
            text: '7'
            multiline: False
            on_text: app.update_miles()

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'up'
                on_press: app.handle_add(1)
            Button:
                text: 'down'
                on_press: app.handle_add(-1)
    Label:
        text: 'Convert m to km'
    Label:
        id: label_output
        text: '0'
        color: ((237/255.0), (255/255.0), (0), 0.8)